<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/trianglelight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangledark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/monthIslamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monthIslamic"
        android:fontFamily="@font/poppin_extrabold"
        android:layout_marginStart="32dp"
        android:layout_marginTop="58dp"
        android:textSize="32sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/yearIslamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yearIslamic"
        android:fontFamily="@font/poppin_extrabold"
        android:layout_marginStart="32dp"
        android:textSize="32sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthIslamic"
        />

    <TextView
        android:id="@+id/H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:fontFamily="@font/poppin_extrabold"
        android:layout_marginStart="8dp"
        android:textSize="32sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/yearIslamic"
        app:layout_constraintTop_toBottomOf="@id/monthIslamic"
        />

    <FrameLayout
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cardgreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yearIslamic"
        android:layout_marginStart="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="Day"
            android:textColor="@color/white"
            android:fontFamily="@font/poppin_bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardDay"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:background="@drawable/cardwhite"
            android:layout_marginTop="72dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/dayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dayCount"
                android:textSize="40sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppin_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="28dp"/>

            <TextView
                android:id="@+id/dateSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="/"
                android:fontFamily="@font/poppin_bold"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="@+id/dayNumber"
                app:layout_constraintStart_toEndOf="@+id/dayNumber"/>

            <TextView
                android:id="@+id/dayOffCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dayOff"
                android:textSize="24sp"
                android:fontFamily="@font/poppin_bold"
                app:layout_constraintTop_toTopOf="@+id/dateSlash"
                app:layout_constraintStart_toEndOf="@+id/dateSlash"
                android:layout_marginEnd="25dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calendar1Card"
            android:layout_width="132dp"
            android:layout_height="50dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/cardwhite"
            >
            <TextView
                android:id="@+id/monthCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="4dp"
                android:text="@string/monthset"
                android:fontFamily="@font/poppin_bold"
                android:textSize="16sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cardyellow"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/yearIslamic">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppin_bold"
            android:text="Tarawih"
            android:textColor="@color/white"
            android:textSize="32sp"></TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="132dp"
            android:layout_height="172dp"
            android:id="@+id/countCard"
            android:background="@drawable/cardwhite"
            android:layout_marginTop="72dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/tarawihCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="23"
                android:fontFamily="@font/poppin_bold"
                android:textSize="64sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tarawihCount"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Rakaat"
                android:fontFamily="@font/poppin_bold"
                android:textSize="24sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp">
            <ImageButton
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/btnTarawih"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/whitecircle"
                android:src="@drawable/baseline_add_24"
                android:importantForAccessibility="no" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/card3"
        android:layout_width="368dp"
        android:layout_height="127dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cardorange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card1">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo1"
            android:background="@drawable/whitecircle"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tadarus"
            android:fontFamily="@font/poppin_extrabold"
            android:textSize="28dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juz - 1"
            android:layout_marginTop="60dp"
            android:layout_marginStart="110dp"
            android:textSize="20dp"
            android:fontFamily="@font/poppin_bold"
            android:textColor="#686D76"/>
        <ImageButton
            android:id="@+id/btnTadarus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/menu"
            android:backgroundTint="#686D76"
            android:layout_marginStart="290dp"
            android:layout_marginTop="35dp"
            android:importantForAccessibility="no" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/whitecircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card3"
        >
        <ImageButton
            android:id="@+id/btnAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alarm"
            android:background="@drawable/whitecircle"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
